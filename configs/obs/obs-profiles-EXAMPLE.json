  "_DOCUMENTATION": {
    "download_methods": {
      "github": {
        "description": "Download from GitHub releases (RECOMMENDED - auto-updates)",
        "required_fields": ["downloadMethod", "repo", "filePattern"],
        "steps": [
          "1. Go to GitHub repository (e.g., https://github.com/WarmUpTill/SceneSwitcher)",
          "2. Click 'Releases' tab",
          "3. Look at latest release files",
          "4. repo = 'username/repository-name' (from URL)",
          "5. filePattern = pattern matching the file you want (e.g., '*.zip', '*-Windows.zip')"
        ],
        "example": {
          "downloadMethod": "github",
          "repo": "exeldro/obs-source-dock",
          "filePattern": "*.zip"
        }
      },
      
      "direct": {
        "description": "Direct download from any URL",
        "required_fields": ["downloadMethod", "url", "filename"],
        "steps": [
          "1. Find the direct download link",
          "2. Right-click and copy URL",
          "3. Use that as 'url'",
          "4. Choose any 'filename' you want"
        ],
        "example": {
          "downloadMethod": "direct",
          "url": "https://example.com/plugin.zip",
          "filename": "my-plugin.zip"
        }
      },
      
      "obsproject": {
        "description": "Download from OBS Project forum",
        "required_fields": ["downloadMethod", "resourceId", "version", "fileId", "filename"],
        "steps": [
          "1. Go to OBS forum resource page",
          "2. URL looks like: https://obsproject.com/forum/resources/PLUGINNAME.NUMBER/",
          "3. resourceId = the NUMBER after the plugin name",
          "4. Click download button to see full URL",
          "5. Full URL: https://obsproject.com/forum/resources/move.913/version/6257/download?file=113467",
          "6. version = number after /version/ (6257)",
          "7. fileId = number after ?file= (113467)"
        ],
        "url_breakdown": {
          "pattern": "https://obsproject.com/forum/resources/{name}.{resourceId}/version/{version}/download?file={fileId}",
          "example": "https://obsproject.com/forum/resources/move.913/version/6257/download?file=113467",
          "extract": {
            "resourceId": "913",
            "version": "6257", 
            "fileId": "113467"
          }
        },
        "example": {
          "downloadMethod": "obsproject",
          "resourceId": "913",
          "version": "6257", 
          "fileId": "113467",
          "filename": "move.zip"
        }
      }
    },
    
    "tips": [
      "üêô GitHub method is most reliable - gets latest versions automatically",
      "üåê Direct method works for any downloadable URL",
      "üèõÔ∏è OBS Project method requires manual URL inspection but works for forum-only plugins",
      "üìÅ You can mix different methods in the same profile",
      "üè∑Ô∏è Plugin names must be unique within each profile",
      "üìù Use descriptive names for easy management",
      "üîÑ Script only downloads/updates when plugin versions change"
    ]
  }
} 