{
  "_README": "This is an EXAMPLE file showing all plugin download methods. Copy what you need to obs-profiles.json",
  
  "baseInstallPath": "C:\\Tools",
  "profiles": {
    "streaming": {
      "name": "OBS Studio (Streaming)",
      "description": "Full-featured setup for live streaming",
      "plugins": [
        {
          "_comment": "=== GITHUB METHOD (Recommended) ===",
          "name": "Advanced Scene Switcher",
          "description": "Automated scene switching based on various conditions",
          "downloadMethod": "github",
          "repo": "WarmUpTill/SceneSwitcher",
          "filePattern": "*-Windows.zip",
          "_howto": "Go to https://github.com/WarmUpTill/SceneSwitcher/releases, find repo name and file pattern"
        },
        {
          "_comment": "=== GITHUB METHOD - Another Example ===",
          "name": "Source Dock",
          "description": "Dock any source in a separate window",
          "downloadMethod": "github", 
          "repo": "exeldro/obs-source-dock",
          "filePattern": "*.zip",
          "_howto": "GitHub: username/repository-name, pattern matches the release file you want"
        },
        {
          "_comment": "=== OBS PROJECT FORUM METHOD ===",
          "name": "Move Transition",
          "description": "Move sources to a new position during scene transition",
          "downloadMethod": "obsproject",
          "resourceId": "913",
          "version": "6257", 
          "fileId": "113467",
          "filename": "move.zip",
          "_original_url": "https://obsproject.com/forum/resources/move.913/version/6257/download?file=113467",
